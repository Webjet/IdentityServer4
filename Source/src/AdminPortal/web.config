<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <!--
    Configure your application settings in appsettings.json. Learn more at http://go.microsoft.com/fwlink/?LinkId=786380
  -->

  <system.webServer>
    <!-- https://azure.microsoft.com/en-us/blog/disabling-arrs-instance-affinity-in-windows-azure-web-sites/ -->
    <!--<httpProtocol>
      <customHeaders>
        <add name ="Arr-Disable-Session-Affinity" value ="true"/>
      </customHeaders>
    </httpProtocol>-->
    <!-- 
    https://msftplayground.com/2015/12/https-only-for-azure-websites/ 
    https://github.com/aspnet/Security/issues/219
    https://blogs.msdn.microsoft.com/benjaminperkins/2014/01/07/https-only-on-windows-azure-web-sites/
    -->
    <rewrite>
      <rules>
        <rule name="Redirect HTTP to HTTPS" enabled ="true" stopProcessing ="true">
          <match url="(.*)"/>
          <conditions>
            <add input ="{HTTPS}" pattern ="off" ignoreCase ="true"/>
            <!--<add input ="{HTTPS}" matchType="Pattern" pattern="^localhost(:\d+)?$" negate="true"/>-->
            <!--<add input="{HTTP_HOST}" matchType="Pattern" pattern="^localhost(:\d+)?$" negate="true"></add>-->
          </conditions>
        <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType ="Permanent"/>
        </rule>
      </rules>
    </rewrite>
    <handlers>
      <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModule" resourceType="Unspecified"/>
    </handlers>
    <aspNetCore processPath="%LAUNCHER_PATH%" arguments="%LAUNCHER_ARGS%" stdoutLogEnabled="true" stdoutLogFile="%home%\LogFiles\stdout" forwardWindowsAuthToken="false"/>
    <!--https://blog.3d-logic.com/2016/06/08/running-asp-net-core-applications-with-iis-and-antares/ suggests \\?\%home%\LogFiles\stdout instead of .\logs\stdout-->
  </system.webServer>
</configuration>
