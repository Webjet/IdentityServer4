@using System.Security.Principal

@if (User.Identity.IsAuthenticated)
{
    <ul class="nav-items">
        <li class="username">
            <a href="#">Welcome, @User.Identity.Name </a>
        </li>
      
        <li><a asp-area="" asp-controller="Account" asp-action="SignOut">Log Out</a></li>
    </ul>
}
else
{
    <ul class="nav-items">
        <li><a asp-area="" asp-controller="Account" asp-action="Signin">Log in</a></li>
    </ul>
}
