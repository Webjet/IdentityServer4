</head>
<body id="webjet">
    <div id="content-wrapper" class="responsive">
        <header>
            <div id="logo">
                <a href="//www.webjet.com.au" title="Webjet">
                    <img src="~/images/webjet-logo.png" srcset="~/images/webjet-logo-2x.png 2x" alt="Webjet logo" width="145" height="73" />
                </a>
            </div>
            <button id="nav-toggle" class="nav-toggle" type="button"><span class="wj-icon wj-menu"></span>Menu</button>
        </header>
        <div id="navigation">
            <nav id="main-nav">
                <ul class="nav-items">
                    <li class="important">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "home" })
                    </li>
                    <li class="important">
                        @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "About" })
                    </li>
                </ul>
            </nav>
            <div id="service-panel">
                <nav id="service-nav">
                    @Html.Partial("_LoginPartial")
                </nav>
            </div>
            <button id="nav-close" type="button" class="nav-toggle"><span class="wj-icon wj-s-cross"></span> Close this menu</button>
        </div>
        <div id="main-container">
            <div id="content">
                <div id="admin" class="side-gutter">
                    @RenderBody()
                </div>
            </div>
            <footer></footer>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"
            asp-fallback-src="~/libs/jquery/dist/jquery.min.js">
    </script>


@* src="~/libs/jquery-ui/jquery-ui.min.js" conflict with bootstrap.min.js due to common toolTip method. 
    solution, we have to refer bootstrap tooltip method, add bootstrap reference after jquery-ui to overcome error*@

    <script src="//ajax.aspnetcdn.com/ajax/jquery.ui/1.11.4/jquery-ui.js"
            asp-fallback-src="~/libs/jquery-ui/jquery-ui.min.js">
    </script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"
            asp-fallback-src="~/libs/bootstrap/dist/js/bootstrap.min.js">
    </script>

    <script src="~/js/admin.js" asp-append-version="true"></script>
    <script src="~/js/webjet.ui.build.js"></script>

    @RenderSection("FooterScripts", false)

