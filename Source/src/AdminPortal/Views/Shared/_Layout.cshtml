<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin Portal 1.0</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Admin Portal" />
    <meta name="keywords" content="Admin Portal" />
    <link rel="shortcut icon" type="image/x-icon" href="~/images/favicon.ico" />
    <link rel="apple-touch-icon" href="~/images/webjet-au-icon.png" />
    <link rel="apple-touch-icon" sizes="72x72" href="~/images/Webjet-au-icon-72x72.png" />
    <link rel="apple-touch-icon" sizes="114x114" href="~/images/Webjet-au-icon-114x114.png" />

    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700" rel="stylesheet" type="text/css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/css/main.css" />

    <environment names="Development">
        <link rel="stylesheet" href="~/css/main.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    </environment>

